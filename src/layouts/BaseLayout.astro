---
import Header from '../components/Header';

import VideoBackground from '../components/VideoBackground';
import '../index.css';

interface Props {
	title?: string;
}

const { title = "muffin" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
	</head>
	<body class="theme-image">
		<div id="root" class="app-container">

			<VideoBackground client:load />
			<div class="content-container">
				<Header client:load />
				<main>
					<slot />
				</main>
			</div>
		</div>
	</body>
</html>

<style is:global>
	:root {
		--header-height: 72px;
	}
</style>
